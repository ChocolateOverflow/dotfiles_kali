##### Basic bindings #####

super + t
	~/.custom/scripts/unicode_copy
super + i
	$TERMINAL -e htop
super + shift + i
	$TERMINAL -e bmon
super + p
	$TERMINAL -e python
super + d
	dmenu_run
super + f
	$TERMINAL -e $FILE_CLI
super + shift + f
	$FILE_GUI
super + v
	clipmenu
super + b
	$BROWSER
super + shift + b
	firejail --tracelog torbrowser-launcher
super + n
	$TERMINAL -e newsboat
super + shift + n
	$TERMINAL -e nmtui
super + m
	$TERMINAL -e ncmpcpp
super + shift + m
	$TERMINAL -e pulsemixer
super + Return
	$TERMINAL
super + shift + Return
	$TERMINAL -e tmux

##### bspwm #####

# close/kill
super + {shift,ctrl} + q
	bspc node -{c,k}

# focus the node in the given direction
super + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}
# resize window
super + ctrl + {h,j,k,l}
	bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}
super + ctrl + shift + {h,j,k,l}
	bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}

# alternate between the tiled, monocle, and fullscreen
super + {_,shift + }F11
	bspc {desktop -l next,node -t ~fullscreen}

# cycle between nodes
super + space
	bspc node -f next.local
# swap the current node and the biggest local node
super + shift + space
	bspc node -s biggest.local || bspc node -s next.local

# focus the node for the given path jump
#super + {p,b,comma,period}
	#bspc node -f @{parent,brother,first,second}

super + {a,s}
	bspc desktop {prev,next}.occupied --focus
super + Tab
	bspc desktop last --focus

# focus or send to the given desktop
super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} ^{1-9,10}

# preselect the ratio
super + ctrl + {1-9}
	bspc node -o 0.{1-9}

# preselect the direction
super + ctrl + {t,y}
	bspc node -p {south,east}

# cancel the preselection for the focused node
super + ctrl + r
	bspc node -p cancel

# cancel the preselection for the focused desktop
#super + space
#bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel

# expand a window by moving one of its side outward
#super + shift + {y,u,i,o}
	#bspc node -z {right -20 0,bottom 0 20,bottom 0 -20,right 20 0}

# move a floating window
super + alt + {h,j,k,l}
	bspc node -v {-20 0,0 20,0 -20,20 0}
super + ctrl + u; {q,w,e,a,s,d,z,x,c}
	move_floating {1,2,3,4,5,6,7,8,9}

# Toggle floating
super + u
	bspc node focused -t \~floating

# Make a windoww sticky/non-sticky
super + shift + u
	bspc node -g sticky={on,off}

# Hide/Unhide node(s)
super + y
	bspc node -g hidden=on
super + shift + y
	bsp_unhideall

#super + {i,o}
	#bspc node -f {prev,next}.local
#super + shift + n
	#bspc node focused -t \~floating ; hover right
#super + shift + b
	#bspc node focused -t \~floating ; hover left

##### Power and daemons #####

# Menu for shutdown, reboot, etc.
super + F12
	power_menu
# Quick lock screen
super + shift + F12
	$SCREENLOCK

# restart daemons
super + F5
	pkill -USR1 -x sxhkd; \
	killall dunst; \
	killall mpd; \
	dunst & \
	mpd &\
	notify-send "Restart daemons"
# restart polybar
super + shift + F5
	launch_polybar
# restart bspwm
super + ctrl + F5
	bspc wm -r

##### Music #####

XF86AudioPlay
	mpc toggle
XF86Audio{Next,Prev}
	mpc {next,prev}
shift + XF86Audio{Next,Prev}
	mpc seek {+,-}10

##### Screenshots #####

# full screenshot to clipboard
Print
	maim | xclip -selection clipboard -t image/png && notify-send "Copied screenshot to clipboard"
# cropped screenshot to clipboard
shift + Print
	maim -s | xclip -selection clipboard -t image/png && notify-send "Copied screenshot to clipboard"
# fill screenshot to file
ctrl + Print
	maim "$HOME/Pictures/screenshots/screenshot_$(date '+%y%m%d-%H%M-%S').png" && notify-send "Saved screenshot"
# cropped screenshot to file
super + Print
	maim -s "$HOME/Pictures/screenshots/screenshot_$(date '+%y%m%d-%H%M-%S').png" && notify-send "Saved screenshot"

##### XF86 keys #####

# Audio
XF86AudioRaiseVolume
	pactl set-sink-volume 0 +5%
Shift+XF86AudioRaiseVolume
	pactl set-sink-volume 0 +10%
ctrl+XF86AudioRaiseVolume
	pactl set-sink-volume 0 +1%
XF86AudioLowerVolume
	pactl set-sink-volume 0 -5%
Shift+XF86AudioLowerVolume
	pactl set-sink-volume 0 -10%
ctrl+XF86AudioLowerVolume
	pactl set-sink-volume 0 -1%
XF86AudioMute
	pactl set-sink-mute 0 toggle

# Screen
XF86MonBrightnessUp
	xbacklight -inc 5
XF86MonBrightnessDown
	xbacklight -dec 5

##### Presentations #####

# Select screen
super + F8
	displayselect
# Run stuff to assist with presentation
super + shift + F7
	screenkey
# Stop presentation programs
super + F7
	killall screenkey
